            $('input[type=text].mailsCounter').val(count);
          });

          $(".inputsWrapper").on("click", "#delete", function(e){ //user click on remove text              
            count--;
            if($(".mail").length - 1 !== 0){
              var parent_li = $(this).closest('.form-group')
              parent_li.fadeOut('fast', function() {$(this).remove();});    
            }
            $('input[type=text].mailsCounter').val(count);                 
            return false;
          }) 
