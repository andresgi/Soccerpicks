    // TS1387507135: Neon - Responsive Admin Template created by Laborator
  body.page-body.login-page.login-form-fall
    .login-container
      .login-header.login-caret
        .login-content
          a.logo(href='#')
            img(src='/images/logo.png', alt='')
          p.description Es necesario autentificarte para continuar
          // progress bar indicator
          .login-progressbar-indicator
            h3 43%
            span logging in...
      .login-progressbar
        div
      .login-form
        .login-content
          form#form_login(method='post')
            .form-group
              .input-group
                .input-group-addon
                  i.entypo-user
                input#username.form-control(type='text', name='username', placeholder='Username o E-mail', autocomplete='off')
            .form-group
              .input-group
                .input-group-addon
                  i.entypo-key
                input#password.form-control(type='password', name='password', placeholder='Password', autocomplete='off')
            .form-group
              button.btn.btn-primary.btn-block.btn-login(type='submit')
                | Login In
                i.entypo-login
          .login-bottom-links
            a.link(href='#') ¿Olvidaste tú contraseña?
            br
            a.link(href='/new-user') ¡Regístrate!
            br
            a(href='#') ToS
            | -
            a(href='#') Privacy Policy
